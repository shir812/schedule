<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registerActivity">

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="ברוכים הבאים!"
        android:textColor="#030303"
        android:textSize="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name2"
        android:hint="שם פרטי"
        android:paddingLeft="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastname2"
        android:hint="שם משפחה"
        android:paddingLeft="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id2"
        android:hint="תעודת זהות"
        android:paddingLeft="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameuser2"
        android:hint="שם משתמש חדש"
        android:paddingLeft="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="הכנס סיסמא"
        android:paddingLeft="140dp" />

    <CheckBox
        android:id="@+id/isteacher2"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:hint="אני מורה"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/enter2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="התחברות"
        android:textSize="36dp"
        android:layout_marginTop="20dp"/>


</LinearLayout>